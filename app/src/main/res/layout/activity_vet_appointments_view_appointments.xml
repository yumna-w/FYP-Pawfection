<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VetAppointmentsViewAppointments">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="#CCE8DA"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="141dp"
            android:layout_height="132dp"
            app:srcCompat="@drawable/paw" />

        <TextView
            android:id="@+id/VetAppointmentsViewAppointmentsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kufam_bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="UPCOMMING APPOINTMENTS"
            android:textColor="#2F6979"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/VetAppointmentsViewAppointmentsTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Your Appointments "
            android:textColor="#2F6979"
            android:textSize="15sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>